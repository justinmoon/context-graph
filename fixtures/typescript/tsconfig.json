{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // Change from "CommonJS" to "NodeNext"
    "moduleResolution": "NodeNext", // Add this
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
